<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="463.0" prefWidth="430.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.audioplayer.PlayerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button fx:id="fxLogInButton" mnemonicParsing="false" onAction="#LogInButtonClicked" text="Skrá inn" />
   <Button fx:id="fxNyLog" mnemonicParsing="false" onAction="#onNylog" text="Ný Lög" />
    <ListView fx:id="fxLagalistar" onMouseClicked="#onVeljaLista" prefHeight="368.0" prefWidth="390.0" />
    <RadioButton fx:id="fxIslenska" mnemonicParsing="false" onAction="#onIslenskaClicked" selected="true" text="Íslenska" />
    <RadioButton fx:id="fxEnska" mnemonicParsing="false" onAction="#onEnskaClicked" text="Enska" />
</VBox>
